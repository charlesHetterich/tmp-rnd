{
    "name": "dot-cli",
    "version": "0.0.1",
    "type": "module",
    "license": "ISC",
    "scripts": {
        "build": "bun build src/index.ts --compile --outfile dist/dot && mkdir -p ~/.polkadot/bin && cp dist/dot ~/.polkadot/bin/dot",
        "copy:shims": "mkdir -p ~/.config/polkadot && cp ./shims/completion.bash ~/.config/polkadot/completion.bash",
        "dev": "tsc -w"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "typescript": "^5.5.0"
    },
    "packageManager": "pnpm@10.14.0",
    "dependencies": {
        "chalk": "^5.6.2"
    }
}
